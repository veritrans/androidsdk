<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/lib/id.co.veritrans.sdk"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
    >


    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_confirm_payment"
        >

        <android.support.design.widget.AppBarLayout
            android:id="@+id/main_appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            >


            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/main_collapsing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                >


                <FrameLayout
                    android:id="@+id/main_framelayout_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    app:layout_collapseMode="parallax"
                    >


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/sixtyfour_dp"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/eight_dp"
                        android:paddingLeft="@dimen/sixteen_dp"
                        android:paddingRight="@dimen/sixteen_dp"
                        >


                        <TableLayout
                            android:weightSum="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >

                            <TableRow>

                            <id.co.veritrans.sdk.widgets.TextViewFont
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:layout_weight="0.3"
                                android:text="@string/appli"
                                android:textColor="@color/white_little_transparent"
                                android:textSize="@dimen/secondary_text_size"
                                app:font="@string/font_open_sans_regular"
                                />

                            <id.co.veritrans.sdk.widgets.TextViewFont
                                android:layout_height="wrap_content"
                                android:layout_width="@dimen/forty_dp"
                                android:gravity="center"
                                android:text=":"
                                android:textColor="@color/white_little_transparent"
                                android:textSize="@dimen/primary_text_size"
                                app:font="@string/font_open_sans_bold"
                                android:layout_weight="0.3"
                                />

                            <id.co.veritrans.sdk.widgets.TextViewFont
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginTop="4dp"
                                android:text="3"
                                android:layout_weight="1"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/secondary_text_size"
                                app:font="@string/font_open_sans_regular"
                                />

                            </TableRow>


                        <TableRow
                            android:layout_marginTop="@dimen/eight_dp"
                            >

                            <id.co.veritrans.sdk.widgets.TextViewFont
                                android:layout_weight="0.3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left"
                                android:text="@string/input_1"
                                android:textColor="@color/white_little_transparent"
                                android:textSize="@dimen/secondary_text_size"
                                app:font="@string/font_open_sans_regular"
                                />

                            <id.co.veritrans.sdk.widgets.TextViewFont
                                android:layout_weight="0.3"
                                android:layout_width="@dimen/forty_dp"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:text=":"
                                android:textColor="@color/white_little_transparent"
                                android:textSize="@dimen/primary_text_size"
                                app:font="@string/font_open_sans_bold"
                                />

                            <id.co.veritrans.sdk.widgets.TextViewFont
                                android:id="@+id/text_input_1"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="Input 1 here"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/secondary_text_size"
                                app:font="@string/font_open_sans_regular"
                                />
                        </TableRow>


                        <TableRow
                            android:layout_marginTop="@dimen/eight_dp"
                            >

                            <id.co.veritrans.sdk.widgets.TextViewFont
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.3"
                                android:layout_gravity="left"
                                android:text="@string/input_2"
                                android:textColor="@color/white_little_transparent"
                                android:textSize="@dimen/secondary_text_size"
                                app:font="@string/font_open_sans_regular"
                                />

                            <id.co.veritrans.sdk.widgets.TextViewFont
                                android:layout_width="@dimen/forty_dp"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.3"
                                android:text=":"
                                android:textColor="@color/white_little_transparent"
                                android:textSize="@dimen/primary_text_size"
                                app:font="@string/font_open_sans_bold"
                                />

                            <id.co.veritrans.sdk.widgets.TextViewFont
                                android:id="@+id/text_input_2"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="input 2 here"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/secondary_text_size"
                                app:font="@string/font_open_sans_regular"
                                />
                        </TableRow>


                        <TableRow
                            android:layout_marginTop="@dimen/eight_dp"
                            >

                            <id.co.veritrans.sdk.widgets.TextViewFont
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.3"
                                android:layout_gravity="left"
                                android:text="@string/input_3"
                                android:textColor="@color/white_little_transparent"
                                android:textSize="@dimen/secondary_text_size"
                                app:font="@string/font_open_sans_regular"
                                />

                            <id.co.veritrans.sdk.widgets.TextViewFont
                                android:layout_width="@dimen/forty_dp"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="0.3"
                                android:text=":"
                                android:textColor="@color/white_little_transparent"
                                android:textSize="@dimen/primary_text_size"
                                app:font="@string/font_open_sans_bold"
                                />

                            <id.co.veritrans.sdk.widgets.TextViewFont
                                android:id="@+id/text_input_3"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="Input 3 here"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/secondary_text_size"
                                app:font="@string/font_open_sans_regular"
                                />
                        </TableRow>
                        </TableLayout>

                    </LinearLayout>
                </FrameLayout>




            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>


        <FrameLayout
            android:id="@+id/mandiri_clickpay_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            />


        <android.support.v7.widget.Toolbar
            android:id="@+id/main_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:layout_anchor="@id/main_framelayout_title"
            app:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:title=""
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <id.co.veritrans.sdk.widgets.TextViewFont
                    android:id="@+id/text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mandiri_click_pay"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/tool_bar_title_size"
                    app:font="@string/font_open_sans_regular"
                    />

            </LinearLayout>
        </android.support.v7.widget.Toolbar>


    </android.support.design.widget.CoordinatorLayout>


    <Button
        android:id="@+id/btn_confirm_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/eight_dp"
        android:layout_marginLeft="@dimen/sixteen_dp"
        android:layout_marginRight="@dimen/sixteen_dp"
        android:layout_marginTop="@dimen/eight_dp"
        android:background="@drawable/blue_button_selector"
        android:text="@string/confirm_payment"
        android:textAllCaps="true"
        android:textColor="@color/white"/>


</RelativeLayout>
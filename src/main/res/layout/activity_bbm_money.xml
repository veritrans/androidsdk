<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/lib/id.co.veritrans.sdk"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
    >


    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_holds_buttons"
        >

        <android.support.design.widget.AppBarLayout
            android:id="@+id/main_appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            >


            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/main_collapsing"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                >


                <FrameLayout
                    android:id="@+id/main_framelayout_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    app:layout_collapseMode="parallax"
                    >


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/sixtyfour_dp"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/sixteen_dp"
                        android:paddingRight="@dimen/sixteen_dp"
                        >


                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="3"
                            >

                            <TableRow>

                                <id.co.veritrans.sdk.widgets.TextViewFont
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:layout_weight="0.3"
                                    android:text="@string/orderId"
                                    android:textColor="@color/white_little_transparent"
                                    android:textSize="@dimen/secondary_text_size"
                                    app:font="@string/font_open_sans_regular"
                                    />

                                <id.co.veritrans.sdk.widgets.TextViewFont
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.3"
                                    android:text=":"
                                    android:textColor="@color/white_little_transparent"
                                    android:textSize="@dimen/secondary_text_size"
                                    app:font="@string/font_open_sans_bold"
                                    />

                                <id.co.veritrans.sdk.widgets.TextViewFont
                                    android:id="@+id/text_order_id"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.5"
                                    android:gravity="left"
                                    android:text="Order Id here"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/secondary_text_size"
                                    app:font="@string/font_open_sans_regular"
                                    />

                            </TableRow>

                            <TableRow
                                android:layout_marginTop="@dimen/eight_dp"
                                >

                                <id.co.veritrans.sdk.widgets.TextViewFont
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:layout_weight="0.3"
                                    android:text="@string/amount"
                                    android:textColor="@color/white_little_transparent"
                                    android:textSize="@dimen/secondary_text_size"
                                    app:font="@string/font_open_sans_regular"
                                    />

                                <id.co.veritrans.sdk.widgets.TextViewFont
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.3"
                                    android:text=":"
                                    android:textColor="@color/white_little_transparent"
                                    android:textSize="@dimen/secondary_text_size"
                                    app:font="@string/font_open_sans_bold"
                                    />

                                <id.co.veritrans.sdk.widgets.TextViewFont
                                    android:id="@+id/text_amount"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:layout_weight="1.5"
                                    android:text="Amount here"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/secondary_text_size"
                                    app:font="@string/font_open_sans_regular"
                                    />

                            </TableRow>

                        </TableLayout>
                    </LinearLayout>
                </FrameLayout>
            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>


        <FrameLayout
            android:id="@+id/bbm_money_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            />


        <android.support.v7.widget.Toolbar
            android:id="@+id/main_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:layout_anchor="@id/main_framelayout_title"
            app:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:title=""
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <id.co.veritrans.sdk.widgets.TextViewFont
                    android:id="@+id/text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bbm_money"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/tool_bar_title_size"
                    app:font="@string/font_open_sans_regular"
                    />

            </LinearLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.CoordinatorLayout>

    <LinearLayout
        android:id="@+id/layout_holds_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_confirm_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/sixteen_dp"
            android:background="@drawable/blue_button_selector"
            android:text="@string/confirm_payment"
            android:textAllCaps="true"
            android:textColor="@color/white"
            />

        <LinearLayout
            android:id="@+id/layout_pay_with_bbm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/eight_dp"
            android:layout_marginLeft="@dimen/sixteen_dp"
            android:layout_marginRight="@dimen/sixteen_dp"
            android:layout_marginTop="@dimen/eight_dp"
            android:background="@drawable/blue_button_selector"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/twelve_dp"
            android:paddingTop="@dimen/twelve_dp"
            android:visibility="gone"
            >

            <id.co.veritrans.sdk.widgets.TextViewFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/bbm_btn_text1"
                android:textAllCaps="true"
                android:textColor="@color/white"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/sixteen_dp"
                android:layout_marginRight="@dimen/sixteen_dp"
                android:gravity="center"
                android:src="@drawable/ic_btn_bbm"
                />

            <id.co.veritrans.sdk.widgets.TextViewFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/bbm_btn_text2"
                android:textAllCaps="true"
                android:textColor="@color/white"
                />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>